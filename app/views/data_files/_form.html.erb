<%= form_for @data_file, :html => { :class => "form-horizontal data_file" } do |f| %>

  <% if @data_file.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@data_file.errors.count, "error") %> prohibited this data_file from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @data_file.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :file, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :file, :class => 'form-control' %>
    </div>
    <%=f.error_span(:file) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                data_files_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
